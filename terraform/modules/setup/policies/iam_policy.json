{
    "Version": "2012-10-17",
    "Statement": [{
            "Effect": "Allow",
            "Action": [
                "codecommit:BatchGet*",
                "codecommit:BatchDescribe*",
                "codecommit:Describe*",
                "codecommit:EvaluatePullRequestApprovalRules",
                "codecommit:Get*",
                "codecommit:List*",
                "codecommit:GitPull"
            ],
            "Resource": "${codecommit_arn}"
        },
        {
            "Effect": "Allow",
            "Action": ["iam:Get*", "iam:List*"],
            "Resource": "${codebuild_arn}"
        },
        {
            "Effect": "Allow",
            "Action": "sts:AssumeRole",
            "Resource": "${codebuild_arn}"
        }
    ]
}